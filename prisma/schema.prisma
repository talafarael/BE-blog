generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String @unique
  password String
  posts    Post[] @relation("Post")
}

model Post {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  user   User   @relation("Post", fields: [userId], references: [id])
  userId String @db.ObjectId
}
